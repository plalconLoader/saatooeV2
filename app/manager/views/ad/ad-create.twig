{% extends "layout/header.twig" %}
{% block content %}

<link rel="stylesheet" type="text/css" media="all" href="/plugins/daterangepicker/daterangepicker-bs3.css" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border text-center">
                        <h3 class="box-title">
                            添加广告
                        </h3>
                    </div>
                    <!-- form start -->
                    <form class="form-horizontal" method="post" onsubmit="return form_submit();">
                        <input type="hidden" name="ad_image" value="">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputPassword3"  class="col-sm-2 control-label">
                                    广告链接
                                </label>

                                <div class="col-sm-9 input-group">

                                    <span class="input-group-addon">
                                        <i class="fa fa-link  fa-fw"></i>
                                    </span>

                                    <input type="url" name="link" required class="form-control" id="inputPassword3" placeholder="请输入广告链接">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    广告位
                                </label>

                                <div class="col-sm-9 input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-location-arrow  fa-fw"></i>
                                    </span>

                                    <select required name="position_name" class="form-control">
                                        <option value="">--请选择广告位--</option>

                                        {% for item in position %}
                                            <option value="{{ item.position_name }}">
                                                {{ item.position_name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    排序值
                                </label>

                                <div class="col-sm-9 input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort fa-fw"></i>
                                    </span>

                                    <input value="1" type="number" name="sort" class="form-control" id="inputEmail3">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    时间设置
                                </label>

                                <div class="col-sm-9 input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar fa-fw"></i>
                                    </span>

                                    <input type="text" readonly style="cursor:no-drop" placeholder="单击选择时间" name="time_between" required id="reservation" class="form-control"  />
                                </div>
                            </div>


                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    广告图片
                                </label>

                                <div class="col-sm-9 input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-file  fa-fw"></i>
                                    </span>

                                    <input form="upload" id="iframeForm" type="file" name="file" class="form-control">
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="checkbox">
                                        <label>

                                            <input checked type="checkbox" class="flat-red" name="state" value="1">
                                            投放广告
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">
                                        图片预览
                                    </label>
                                    <img style="cursor: pointer" width="640" height="320" src="" id="showImage">
                                </div>

                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success btn-block">
                                添加广告
                            </button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

    <form target="upload" id="upload" name="upload" action="/common/upload" method="post" enctype="multipart/form-data">

    </form>

    <iframe frameborder="0" style="display: none;" name="upload"></iframe>
</div>
<!-- /.content-wrapper -->
{% endblock %}

{% block pageJs %}

<script type="text/javascript" src="/plugins/daterangepicker/moment.js"></script>
<script type="text/javascript" src="/plugins/daterangepicker/daterangepicker.js"></script>
    <script>
        var index;
        $(
                function () {
                    $('#iframeForm').change(function () {
                        $('#upload').submit();//提交
                        index = layer.msg('正在上传图片...',{icon:1,time:1000000,shade:0.6,shadeClose:true});
                    });

                    //格式化时间插件
                    $('#reservation').daterangepicker({
                        separator:' 到 ',
                        showDropdowns : true,
                        timePicker : true, //是否显示小时和分钟
                        timePickerIncrement : 1, //时间的增量，单位为分钟
                        timePicker12Hour : false, //是否使用12小时制来显示时间
                        opens : 'right', //日期选择框的弹出位置
                        cancelClass : 'btn-small',
                        format : 'YYYY-MM-DD HH:mm:ss' //控件中from和to 显示的日期格式
                    });
                }
        );


        var form_submit = function () {

            var flag = false;
            if(!$('#reservation').val()){
                layer.msg('请选择广告时间!',invalid);
            }else if(!$('input[name = ad_image]').val()){
                layer.msg('请上传广告图片!',invalid);
            }else{
                flag = true;
            }
            return flag;
        };

        //上传成功的回调
        var iframe_success_callback = function (object) {
            //这里就单独做处理了~
            var single = object[0];
            $('input[name = ad_image]').val(single.hidden);
//            $('#showImage').attr('src',single.showUrl);
            $('#showImage').attr('src','http://cdn.saatoo.cn/91c98da231562bae2e18d27075ff0dbf.jpg');
            layer.msg('上传成功!');
        };

        var iframe_error_callback = function (msg) {
            layer.msg(msg,invalid);
        };
    </script>
{% endblock %}
